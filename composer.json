{
    "name": "arokettu/uuid",
    "type": "library",
    "license": "MIT",
    "description": "UUID and ULID classes",
    "keywords": ["uuid", "ulid", "uuid v4" ,"uuid v7", "parser"],
    "homepage": "https://sandfox.dev/php/uuid.html",
    "authors": [{
        "name": "Anton Smirnov",
        "email": "sandfox@sandfox.me",
        "role": "developer",
        "homepage": "https://sandfox.me/"
    }],
    "support": {
        "issues": "https://gitlab.com/sandfox/php-uuid/-/issues",
        "source": "https://gitlab.com/sandfox/php-uuid",
        "docs": "https://arokettu-uuid.readthedocs.io/",
        "chat": "https://gitter.im/arokettu/community"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Arokettu\\Uuid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arokettu\\Uuid\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "arokettu/system-clock": "^2.0",
        "arokettu/unsigned": "^1.3"
    },
    "require-dev": {
        "arokettu/clock": "^2.4",
        "phpunit/phpunit": "^11.5",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2025.09.17",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^6.9"
    },
    "suggest": {
        "php-64bit": "The library is optimized for 64-bit systems",
        "ext-gmp": "To speed up calculations on 32-bit systems",
        "ext-bcmath": "To speed up calculations on 32-bit systems"
    }
}
